---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <div class="post-preview">
    <a href="post.html">
      <h2 class="post-title">
          <%= link_to article.title, article %>
      </h2>
    </a>
    <p class="post-meta"><%= article.date.strftime('%b %e') %></p>
    <%= article.body %>
  </div>
  <% if (i != page_articles.size - 1) %>
    <hr>
  <% end %>
<% end %>

<!-- Pager -->
<% if paginate %>
  <ul class="pager">
    <% if prev_page %>
      <li class="next">
          <p><%= link_to 'Previous page', prev_page %></p>
      </li>
    <% end %>
    <% if next_page %>
      <li class="next">
          <p><%= link_to 'Next page', next_page %></p>
      </li>
    <% end %>
  </ul>
<% end %>
