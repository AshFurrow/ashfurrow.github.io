def talk_to_html(type, talk) 
  talk_name = talk["name"]
  conference = talk["conference"]
  conference_url = talk["url"]
  location = talk["location"]
  dates = talk["dates"]
  slides = talk["slides"]
  video = talk["video"]
  code = talk["code"]

  html = ""

  if type == :future
    if conference_url
      html += "<h3><a href=#{conference_url}'>#{conference}</a></h3>"
    else
      html += "<h3>#{conference}</h3>"
    end
  elsif type == :past
    html += "<h3>#{talk_name}</h3>"
    if conference_url
      html += "<p><a href=#{conference_url}'><i class='fa fa-quote-left'></i>#{conference}</a></p>"
    else
      html += "<p><i class='fa fa-quote-left'></i>#{conference}</p>"
    end
  end

  if location
    html += "<p><i class='fa fa-map-marker'></i>#{location}</p>"
  end

  if dates
    html += "<p><i class='fa fa-calendar'></i>#{dates}</p>"
  end

  if code
    html += "<p><a href='#{code}'><i class='fa fa-code'></i>Sample Code</a></p>"
  end

  if slides
    html += "<p><a href='#{slides}'><i class='fa fa-file'></i>Slides</a></p>"
  end

  if video
    html += "<p><a href='#{code}'><i class='fa fa-youtube-play'></i>Recorded Video</a></p>"
  end

  html
end

def columns(talks)
  html = ""
  (0..talks.count).step(2) do |i|
   if i + 1 < talks.count
    # We have 2 or more left
    html += <<-EOS
    <div class="container">
      <div class="row">
        <div class="conference col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-1">
          #{talks[i]}
        </div>
        <div class="conference col-lg-4 col-md-5">
          #{talks[i+1]}
        </div>
      </div>
    </div>
    EOS
   else
    # This is our last one
    html += <<-EOS
    <div class="container">
      <div class="row">
        <div class="conference col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-1">
          #{talks[i]}
        </div>
      </div>
    </div>
    EOS
   end
  end
  html
end

def talks_to_html(type, talks)
  if talks.count > 0
    formatted_talks = talks.map { |talk| talk_to_html(type, talk) }
    columns(formatted_talks)
  else
    # Just gonna assume we always have past talks ¯\_(ツ)_/¯
    <<-EOS
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <p>No upcoming talks at this time.</p>
          </div>
        </div>
      </div>
    EOS
  end
end
%>


