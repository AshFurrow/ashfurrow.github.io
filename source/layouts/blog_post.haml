= wrap_layout :layout do
  - link_to = current_resource.metadata[:page]['link_to']

  / Page Header
  = partial :header, locals: { title: current_article.title, style: 'post-heading' }

  .container
    %article
      .row
        %div[standard_width]
          = yield
          %hr/
          %span.meta= "Posted on #{current_article.date.strftime('%B %e, %Y')}"
    .row
      %div[standard_width]
        %hr/
        - if link_to
          = partial :marketing, :locals => { :book_name => link_to }
          %hr/
        = partial :article_pager
