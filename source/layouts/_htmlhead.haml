%meta{charset: 'utf-8'}/
%meta{content: 'IE=edge;chrome=1', 'http-equiv' => 'X-UA-Compatible'}/

%title= html_title(current_article, current_resource)

= feed_tag :atom, data.site.feed_link, title: 'Atom Feed'
= feed_tag :rss, data.site.feed_rss_link, title: 'RSS Feed'
= stylesheet_link_tag 'bootstrap.min', 'clean-blog', 'syntax', 'fontcustom.css', 'cntl.css', 'custom'

/ Meta stuff
%link{href: "http://ashfurrow.com#{current_resource.url}", rel: 'canonical'}/
%meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}/
%meta{content: data.site.name, property: 'og:site_name'}/
%meta{content: og_title(current_article, current_resource), property: 'og:title'}/
%meta{content: "http://ashfurrow.com#{current_resource.url}", property: 'og:url'}/
%meta{content: 'website', property: 'og:type'}/
%meta{content: page_description, property: 'og:description'}/
%meta{content: og_image_or_default(current_article, current_resource), property: 'og:image'}/
%meta{content: 'Blog', itemprop: 'name'}/
%meta{content: "http://ashfurrow.com#{current_resource.url}", itemprop: 'url'}/
%meta{content: page_description, itemprop: 'description'}/
%meta{content: data.site.dark_image, itemprop: 'thumbnailUrl'}/
%link{href: data.site.dark_image, rel: 'image_src'}
%meta{content: data.site.dark_image, itemprop: 'image'}/
%link{href: '/favicon.ico', rel: 'shortcut icon', type: 'image/x-icon'}

- if current_resource && current_resource.metadata[:page]['noindex'] == true
  %meta{content: 'noindex', name: 'robots'}/

/ Rich Snippets
%script{type: 'application/ld+json'}
  {
  '@context' : 'http://schema.org',
  '@type' : 'Person',
  'name' : 'Ash Furrow',
  'url' : 'http://ashfurrow.com',
  'image' : 'http://static.ashfurrow.com/ashfurrow_square.jpg',
  'sameAs' : [ 'http://twitter.com/ashfurrow', 'http://instagram.com/ashfurrow', 'http://github.com/ashfurrow' ]
  }
%script{type: 'application/ld+json'}
  {
  '@context': 'http://schema.org',
  '@type': 'Organization',
  'url': 'http://ashfurrow.com',
  'logo': '#{data.site.image}'
  }

/ Custom Fonts
%link{href: 'http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel: 'stylesheet', type: 'text/css'}
%link{href: 'http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel: 'stylesheet', type: 'text/css'}
%link{href: 'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel: 'stylesheet', type: 'text/css'}

